// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Biodata {
  id                 String               @id @default(uuid())
  createdAt          DateTime             @default(now())
  positionDesired    String
  fullname           String
  gender             String
  civilStatus        String
  cityAddress        String
  provincialAddress  String
  cellphone          String
  email              String
  dateOfBrith        String
  birthOfPlace       String
  citizenship        String
  height             String
  weight             String
  religion           String
  spouse             String?
  spouseOccupation   String?
  children           Children[]
  father             String?
  fatherOccupation   String
  mother             String
  motherOccupation   String
  language           String
  emergencyContact   String
  emergencyAddress   String
  elementary         String?
  elementaryGrad     String?
  highschool         String?
  highschoolGrad     String?
  college            String?
  collegeGrad        String?
  degree             String?
  specialSkills      String?
  employmentRecord   EmploymentRecord[]
  characterReference CharacterReference[]
}

model Children {
  id        String   @id @default(uuid())
  name      String
  birth     String
  Biodata   Biodata? @relation(fields: [biodataId], references: [id])
  biodataId String?
}

model EmploymentRecord {
  id           String   @id @default(uuid())
  companyName  String?
  position     String?
  positionFrom String?
  positionTo   String?
  Biodata      Biodata? @relation(fields: [biodataId], references: [id])
  biodataId    String?
}

model CharacterReference {
  id        String   @id @default(uuid())
  name      String
  company   String
  position  String
  contact   String
  Biodata   Biodata? @relation(fields: [biodataId], references: [id])
  biodataId String?
}
